<p class="total-balance"><strong>Total Balance: </strong><%= number_to_currency(@total_balance) %></p>
<%= link_to 'Add Expense', new_expense_path, class: 'btn btn-primary' %>

<%= month_calendar(year: @year, month: @month) do |date| %>
  <div class="day">
    <strong><%= date.day %></strong>

    <!-- Display expenses for the current date -->
    <div class="expenses">
      <!-- Get the expenses for the current date from the grouped data -->
      <% expenses_for_day = @expenses_by_date[date] || [] %>

      <% if expenses_for_day.any? %>
        <% expenses_for_day.each do |expense| %>
          <div class="expense">
            <span><%= expense.description %></span> - 
            <span><%= number_to_currency(expense.amount) %></span>
          </div>
        <% end %>
      <% else %>
        <!-- Optional: Show a message when there are no expenses for the day -->
        <p>No expenses for this day.</p>
      <% end %>
    </div>
  </div>
<% end %>
