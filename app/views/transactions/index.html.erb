<p class="total-balance"><strong>Total Balance: </strong><%= number_to_currency(@total_balance) %></p>
<%= link_to 'Add Expense', new_expense_path, class: 'btn btn-primary' %>

<%= month_calendar(year: @year, month: @month) do |date| %>
  <div class="day">
    <strong><%= date.day %></strong>

    <!-- Display transactions for the current date -->
    <div class="transactions">
      <!-- Get the transactions for the current date from the grouped data -->
      <% transactions_for_day = @transactions_by_date[date] || [] %>

      <% if transactions_for_day.any? %>
        <% transactions_for_day.each do |transaction| %>
          <div class="transaction">
            <span><%= transaction.description %></span> - 
            <span><%= number_to_currency(transaction.amount) %></span> 
            <span>(<%= transaction.transaction_type %>)</span>
          </div>
        <% end %>
      <% else %>
        <!-- Optional: Show a message when there are no transactions for the day -->
        <p>No transactions for this day.</p>
      <% end %>
    </div>
  </div>
<% end %>
