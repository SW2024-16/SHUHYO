<!-- app/views/expenses/index.html.erb -->
<h1>Expenses</h1>
<%= link_to 'Add Expense', new_expense_path, class: 'btn btn-primary' %>

<ul>
  <% @expenses.each do |expense| %>
    <li>
      <%= expense.name %>: <%= number_to_currency(expense.amount) %> - <%= expense.date %>
    </li>
  <% end %>
</ul>
