<!-- app/views/expenses/edit.html.erb -->
<h1>Edit Expense: <%= @expense.name %></h1>

<%= form_with(model: @expense, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, '名前', class: 'control-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :amount, '値段', class: 'control-label' %>
    <%= form.number_field :amount, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, '詳細', class: 'control-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date, '日付', class: 'control-label' %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit '更新', class: 'btn btn-primary' %>
    <%= link_to 'キャンセル', expense_path(@expense), class: 'btn btn-secondary' %>
  </div>
<% end %>
